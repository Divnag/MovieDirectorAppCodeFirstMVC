<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js">
</script>
<link href="~/Content/HomeIndexStyleSheet.css" rel="stylesheet" />

<link href="~/Content/Site.css" rel="stylesheet" />

<div class="bg">
    @{
        ViewBag.Title = "Home Page";
    }

    <div class="jumbotron">
        <h1>MOVIE DIRECTOR APP</h1>
        <p class="lead"></p>
        @* <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
    </div>
    <div class="row">
        <div class="wow fadeInRight box">

            <div class="col-md-3">
                <div class="thumbnail">
                    <div class="caption">
                        <img src="~/Content/Images/icons8-clapperboard-48.png" />
                        <h2>Movies</h2>
                        <p>
                            See a List of Movies.
                        </p>
                        <p><a class="btn btn-default" href="~/Movies/Index">Movies &raquo;</a></p>
                    </div>
                </div>
            </div>
        </div>


        <div class="wow slideInLeft box">

            <div class="col-md-4"></div>
            <div class="col-md-3">
                <div class="thumbnail">
                    <div class="caption">
                        <img src="~/Content/Images/icons8-movie-projector-48.png" />
                        <h2>Directors</h2>
                        <p>See List of Directors</p>
                        <p><a class="btn btn-default" href="~/Directors/Index">Directors &raquo;</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="box fade-in three">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-3">
                <div class="thumbnail">
                    <div class="caption">

                        <img src="~/Content/Images/icons8-musical-notes-64.png" />
                        <h2>Genre</h2>
                        <p>Variety of Genre.</p>
                        <p><a class="btn btn-default" href="~/Genres/Index">Genre &raquo;</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Initiate WOW js, can be at the bottom of your file -->
<script>
    wow = new WOW(
        {
            boxClass: 'wow',      // default
            animateClass: 'animated', // change this if you are not using animate.css
            offset: 0,          // default
            mobile: true,       // keep it on mobile
            live: true        // track if element updates
        }
    )
    wow.init();
</script>